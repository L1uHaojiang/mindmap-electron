{
  "baseUrl": ".",
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*","types/**/*",],
  "compilerOptions": {
    "composite": true,
    "paths": {
      "@main/*": ["./src/main/*"],
      "@preload/*": ["./src/preload/*"],
      "@types/*": ["./types/*"],
      "@renderer/*": ["./src/renderer/src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"]
  }
}
